border-1px($color)
  position:relative
  &::after
     position:absolute
     left:0
     bottom:0
     width:100%
     border-top:1px solid $color
     content:""
backgroundImg($url)
  background-image:url($url+"@2x.png")
  @media(-webkit-min-device-pixel-ratio:3),(min-device-pixel-ratio:3)
    background-image:url($url+"@3x.png")
borderno(){
  &::after{
       display:none
    }
}
borderno1(){
  &::after{
      display:none
    }
}

borderR1($color,$height){
  position:relative
  &::after{
     position:absolute
     right:0
     bottom:0
     height:$height
     border-right:1px solid $color
     content:""
  }   
}